<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginBottom="@dimen/mid_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/LabelStyle"
                android:text="@string/skill_points"/>

            <TextView
                android:id="@+id/skillValueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/ValueStyle"
                android:text="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="2"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonSkillLvlUp_A0"
                    android:layout_width="@dimen/character_plus_skill"
                    android:layout_height="@dimen/character_plus_skill"
                    android:background="@drawable/plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/mid_margin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/skillPicture_A0"
                        android:background="@drawable/sword"
                        android:layout_width="@dimen/skill_picture_size"
                        android:layout_height="@dimen/skill_picture_size"
                        android:layout_marginBottom="@dimen/small_margin"/>

                    <TextView
                        android:id="@+id/skillText_A0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonSkillLvlUp_D0"
                    android:layout_width="@dimen/character_plus_skill"
                    android:layout_height="@dimen/character_plus_skill"
                    android:background="@drawable/plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/mid_margin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/skillPicture_D0"
                        android:background="@drawable/shield"
                        android:layout_width="@dimen/skill_picture_size"
                        android:layout_height="@dimen/skill_picture_size"
                        android:layout_marginBottom="@dimen/small_margin"/>

                    <TextView
                        android:id="@+id/skillText_D0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="2"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonSkillLvlUp_A1"
                    android:layout_width="@dimen/character_plus_skill"
                    android:layout_height="@dimen/character_plus_skill"
                    android:background="@drawable/plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/mid_margin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/skillPicture_A1"
                        android:background="@drawable/sword"
                        android:layout_width="@dimen/skill_picture_size"
                        android:layout_height="@dimen/skill_picture_size"
                        android:layout_marginBottom="@dimen/small_margin"/>

                    <TextView
                        android:id="@+id/skillText_A1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/buttonSkillLvlUp_D1"
                    android:layout_width="@dimen/character_plus_skill"
                    android:layout_height="@dimen/character_plus_skill"
                    android:background="@drawable/plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/mid_margin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/skillPicture_D1"
                        android:background="@drawable/shield"
                        android:layout_width="@dimen/skill_picture_size"
                        android:layout_height="@dimen/skill_picture_size"
                        android:layout_marginBottom="@dimen/small_margin"/>

                    <TextView
                        android:id="@+id/skillText_D1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    
    

</android.support.constraint.ConstraintLayout>