<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialogSkillName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dialogTextStyle"
            android:text="Skill name"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/dialogSkillPicture"
            android:layout_width="@dimen/dialog_skill_picture_size"
            android:layout_height="@dimen/dialog_skill_picture_size"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/dialogSkillDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            style="@style/dialogTextStyle"/>


        <TextView
            android:id="@+id/dialogCurrentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dialogTextStyle"/>

        <ListView
            android:id="@+id/currentStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/onNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dialogTextStyle"
            android:text="@string/next_level"/>

        <ListView
            android:id="@+id/nextLevelProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/dialogCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>